{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ReactJS in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "trace": true
    },
    {
      "command": "npx nx serve backend",
      "name": "Debug Backend in VSCode",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/apps/backend/src/main.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ],
  "_notes": "Watch this intro video https://www.youtube.com/watch?v=l8knG0BPr-o",
  "_installer": "ms-vscode.js-debug"
}
